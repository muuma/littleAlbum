<%-include('header', {title: 'Upload Album'})%>

<div class="main">
	<div class="album-wrap">
		<form action="/up" method="post" class="was-validated" enctype="multipart/form-data">
			<div class="form-row">
				<div class="form-group col-md-4 mb-3">
					<select class="custom-select" name="album_name" required>
						<option value="">选择相册</option>
						<% for(var i = 0; i < allAlbums.length; i++){ %>
							<option value="<%= allAlbums[i] %>"><%= allAlbums[i] %></option>
						<% } %>
					</select>
					<div class="invalid-feedback">还没有选择要上传到哪个相册哦~</div>
				</div>
				<div class="custom-file col-md-4 mb-3">
					<input type="file" class="custom-file-input" name="image_input" id="validatedCustomFile" required multiple />
					<label class="custom-file-label" for="validatedCustomFile">选择要上传的图片.</label>
					<div class="invalid-feedback">还没有选择图片哦~</div>
				</div>
			</div>
			<button type="submit" class="btn btn-primary mb-2" id="btnSubmit">上传</button>
		</form>
	</div>
</div>
